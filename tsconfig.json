{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"jsx": "react",
		"allowJs": true,
		"lib": [
			"es2018",
			"dom"
		],
		"baseUrl": ".",
		"jsxFactory": "createElement",
	},
	"exclude": [
		"node_modules",
		"dist/**/*.js",
		"config",
		"static",
		"!dist/public/manifest.json"
	]
}